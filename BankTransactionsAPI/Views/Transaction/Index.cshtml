@model IEnumerable<BankTransactionsAPI.Models.Transaction>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Transactions</h1>
<hr>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BeneficiaryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                    <a asp-action="AddOrEdit" class="btn btn-sm btn-success"> <i class="f"></i>➕ New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BeneficiaryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@item.TransactionId">
                    <div class="btn-group btn-group-sm">
                        <a asp-action="AddOrEdit" asp-route-id="@item.TransactionId" class="btn btn-warning">🖊️</a>

                        <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Are you sure you want to delete this record?')">
                            🗑️
                        </button>
                    </div>
                    
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
